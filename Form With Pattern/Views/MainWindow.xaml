<Window x:Class="Form_With_Pattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Form_With_Pattern"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Label
                Canvas.Left="50"
                Canvas.Top="20"
                FontSize="15"
                Content="Name"
                ></Label>
            <TextBox
                Canvas.Left="50"
                Canvas.Top="50"
                Width="300"
                FontSize="20"
                Text="{Binding Name}"
                >
            </TextBox>
            <Label
                Canvas.Left="50"
                Canvas.Top="90"
                FontSize="15"
                Content="Surname"
                ></Label>
            <TextBox
                Canvas.Left="50"
                Canvas.Top="120"
                Width="300"
                FontSize="20"
                Text="{Binding Surname}"
                >
            </TextBox>
            <Label
                Canvas.Left="50"
                Canvas.Top="160"
                FontSize="15"
                Content="Age"
                ></Label>
            <TextBox
                Canvas.Left="50"
                Canvas.Top="190"
                Width="300"
                FontSize="20"
                Text="{Binding Age}"
                >
            </TextBox>
            <Label
                Canvas.Left="50"
                Canvas.Top="230"
                FontSize="15"
                Content="Speciality"
                ></Label>
            <TextBox
                Canvas.Left="50"
                Canvas.Top="260"
                Width="300"
                FontSize="20"
                Text="{Binding Speciality}"
                >
            </TextBox>
            <RadioButton
                Canvas.Left="500"
                Canvas.Top="100"
                Name="JsonRadioButton"
                IsChecked="{Binding JsonWriterChecked}"
                >
            </RadioButton>
            <Label
                Canvas.Left="530"
                Canvas.Top="85"
                FontSize="20"
                Content="Save Json"
                ></Label>
            <RadioButton
                Canvas.Left="500"
                Canvas.Top="150"
                Name="XmlradioButton"
                IsChecked="{Binding XMLWriterChecked}"
                >
            </RadioButton>
            <Label
                Canvas.Left="530"
                Canvas.Top="135"
                FontSize="20"
                Content="Save XML"
                ></Label>
            <RadioButton
                Canvas.Left="500"
                Canvas.Top="200"
                Name="JsonReadradioButton"
                IsChecked="{Binding JsonReaderChecked}"
                >
            </RadioButton>
            <Label
                Canvas.Left="530"
                Canvas.Top="185"
                FontSize="20"
                Content="Read from Json"
                ></Label>
            <RadioButton
                Canvas.Left="500"
                Canvas.Top="250"
                Name="XMLReadradioButton"
                IsChecked="{Binding XMLReaderChecked}"
                >
            </RadioButton>
            <Label
                Canvas.Left="530"
                Canvas.Top="235"
                FontSize="20"
                Content="Read from XML"
                ></Label>
            <Button
                Command="{Binding SaveCommand}"
                Canvas.Left="220"
                Canvas.Top="330"
                Width="90"
                Height="30"
                FontSize="15"
                Content="Save"
                ></Button>
            <Button
                Command="{Binding ReadCommand}"
                Canvas.Left="80"
                Canvas.Top="330"
                Width="90"
                Height="30"
                FontSize="15"
                Content="Read" 
                ></Button>
        </Canvas>
        
    </Grid>
</Window>